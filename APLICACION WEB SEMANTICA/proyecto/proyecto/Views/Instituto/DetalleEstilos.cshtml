@model proyecto.Models.Estilo

@{
    ViewBag.Title = "DetalleEstilos";
}

<div itemscope itemtype="http://schema.org/BlogPosting">
    <div class="container text-center">
        <h1 class="mt-5">Descripción completa del estilo de lucha libre</h1>
    </div>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <h3 class="mt-5">Nombre del Estilo</h3>
            </dt>

            <dd>
                <h4>@Html.DisplayFor(model => model.NomEstilo)</h4>
            </dd>

            <dt>
                <h3 class="mt-5">Descripción</h3>
            </dt>

            <dd>
                <h4>@Html.DisplayFor(model => model.DesEstilo)</h4>
            </dd>

            <dt>
                <h3>Categoria del Estilo</h3>
            </dt>

            <dd>
                <h4>@Html.DisplayFor(model => model.Categoria)</h4>
            </dd>

            <dt>
                <h3>Maestro que lo enseña</h3>
            </dt>

            <dd>
                <h4>@Html.DisplayFor(model => model.Maestro)</h4>
            </dd>

        </dl>
    </div>
    <a class="btn btn-primary">
        @Html.ActionLink("Volver", "Catalogo")
    </a>
</div>